{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "-o",
        "./out/${fileDirname}/${fileBasenameNoExtension}",
        "${file}"
      ],
      "cStandard": "c17",
      "cppStandard": "c++17",
      "intelliSenseMode": "linux-gcc-x64",
            
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
